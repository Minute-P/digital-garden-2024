---
interface Props {
  title: string
  timeDescription: string
  description: string
}

const { title, timeDescription, description } = Astro.props
---

<div class="">
  <text class="text-xl">
    {title}
  </text>
  <div class="mt-1 md:flex">
    {
      description && (
        <div class="w-full md:text-left">
          <t class="*:text-bold text-sm">{description}</t>
        </div>
      )
    }
    {
      timeDescription && (
        <div class="w-full max-w-[24ch] pr-8 md:text-right">
          <t class="*:text-bold text-sm">{timeDescription}</t>
        </div>
      )
    }
  </div>
</div>
