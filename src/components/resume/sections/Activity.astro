---
import SectionBlock from '../SectionBlock.astro'
import UnorderedList from '../UnorderedList.astro'
import Item from '@/components/resume/Item/Item.astro'

import { RESUME } from '@/content/resume.ts'
---

<SectionBlock title="Activity">
  {
    RESUME.activities.map((activity) => (
      <>
        <Item
          title={activity.title}
          timeDescription={activity.time}
          description={activity.description}
          url={activity.url}
        />
        <UnorderedList items={activity.details} />
      </>
    ))
  }
</SectionBlock>
