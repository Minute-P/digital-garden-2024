---
import { getCollection } from 'astro:content'
import PostLayout from '@/layouts/PostLayout.astro'
import { getOutgoingNotes, getIncomingNotes } from '@/utils/bidirectional-link'

export async function getStaticPaths() {
  const allPosts = await getCollection('posts')
  return allPosts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }))
}

const { entry } = Astro.props
const { Content } = await entry.render()

const outgoingNotes = getOutgoingNotes(entry)
console.log('Outgoing notes:', outgoingNotes)

const incomingNotes = await getIncomingNotes(entry)
console.log('Incoming notes - slug:', incomingNotes)
---

<PostLayout frontmatter={entry.data}>
  <Content />
</PostLayout>
