---
import BaseLayoutPrint from '@/layouts/BaseLayoutPrint.astro'

// section
import PrintExperiences from '@/components/resume/sections/PrintExperiences.astro'
import PrintSkills from '@/components/resume/sections/PrintSkills.astro'
import PrintProjects from '@/components/resume/sections/PrintProjects.astro'
import PrintEducation from '@/components/resume/sections/PrintEducation.astro'
import PrintInterests from '@/components/resume/sections/PrintInterests.astro'
import PrintActivity from '@/components/resume/sections/PrintActivity.astro'

import { RESUME } from '@/content/resume.ts'
---

<BaseLayoutPrint title="ALTR's Resume" description="">
  <div class="flex min-h-screen flex-col justify-center font-[Metric]">
    <div
      class="mx-auto grid max-w-[1200px] grid-cols-1 gap-2 p-2 md:grid-cols-2 print:grid-cols-7"
    >
      <!-- header: name and summary -->
      <div class="md:col-span-2 print:col-span-7" name="header-summary">
        <div class="border-b-1 relative p-2 print:border-gray-200">
          <!-- name and job title -->
          <div class="md:flex">
            <div>
              <h1
                class="font-serif text-4xl font-bold text-gray-700 print:font-[Canela]"
              >
                {RESUME.header.name}
              </h1>
              <p class=`text-lg print:font-[Canela] font-bold text-gray-500`>
                {RESUME.header.jobTitle}
              </p>
            </div>
          </div>
          <!-- introduction and contact info -->
          <div class="mt-2 grid grid-cols-3">
            <div name="summary" class="col-span-2 block text-sm">
              <p>
                {RESUME.header.introduction}
              </p>
            </div>
            <div
              class="col-span-1 block text-right text-sm"
              name="contact-info"
            >
              <p>
                <b>Github</b>:
                <a
                  href={RESUME.header.github}
                  target="_blank"
                  rel="noreferrer"
                  class="font-medium underline"
                >
                  {RESUME.header.githubName}
                </a>
              </p>
              <p><b>Email</b>: {RESUME.header.email}</p>
              <p><b>Location</b>: {RESUME.header.location}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- detail -->
      <div
        class="block space-y-2 print:col-span-2 print:block print:space-y-1"
        name="detail-small"
      >
        <PrintSkills />
        <PrintActivity />
        <PrintInterests />
      </div>

      <div
        class="block space-y-2 print:col-span-5 print:block print:space-y-1"
        name="detail-large"
      >
        <PrintExperiences />
        <PrintProjects />
        <PrintEducation />
      </div>
    </div>
  </div>
</BaseLayoutPrint>
